{% extends "Header-Footer/header_disconnected.html.twig" %}
{% block header %}
    <link rel="stylesheet" href="css/register-login/style.css"/>
{% endblock %}
{% block content %}
    <section class="set-bg" data-setbg="img/recent-game-bg.png">
        <div class="community-warp spad">
            <div class="innerb">
                <form method="post" action="{{path('forget_password')}}" class="home-form">
                    {% for message in app.flashes('error') %}
                        <div align="center" class="black">
                            {{ message }}
                        </div>
                    {% else %}
                        <br>
                    {% endfor %}
                    <br>
                    <h3>Connection</h3>
                    <div class="form-wrapper">
                        <label for="username">Username or Email </label>
                        <input type="text" id="username" name="_username" class='form-control' required autofocus>
                    </div>
                    <button type="submit"> Reset password </button>
                </form>
            </div>
        </div>
    </section>
{% endblock %}
