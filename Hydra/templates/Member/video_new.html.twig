{% extends is_granted('IS_AUTHENTICATED_FULLY') ? "Header-Footer/header_connected.html.twig" : "Header-Footer/header_disconnected.html.twig" %}
{% block header %}
    <link rel="stylesheet" href="{{ asset('css/register-login/style.css')}}"/>
{% endblock %}
{% block content %}
    <section class="set-bg" data-setbg="{{ asset('img/background/PUBG3.jpg') }}">
        <div class="background-postvideo spad">
            <div class="inner registration-text">
                <div class="mb-4 mb-lg-4">
                    <form method="post" action="{{path('post_video')}}" class="home-form formwidth">
                        <br>
                        {{ form_start(form) }}
                        {% if video.id is defined %}
                            <h3 style="color: white">Edit a Video</h3>
                        {% else %}
                            <h3 style="color: white">Post a Video</h3>
                        {% endif %}
                        <div class="form-wrapper white">
                            {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <div class="form-wrapper white">
                                {{ form_row(form.category, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-wrapper white">
                                {{ form_row(form.game, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-wrapper white">
                                {{ form_row(form.urlId, {'attr': {'class': 'form-control'}, 'label': "Video's ID (written in the link)"}) }}
                            </div>
                            <div class="form-wrapper white">
                                {{ form_row(form.type, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-wrapper white">
                            {{ form_row(form.description, {'attr': {'class': 'form-control', "rows": '4'}}) }}
                        </div>
                        <br>
                        <br>
                        {% if video.id is defined %}
                            <input type="hidden" name="videoid" value="{{ video.id }}">
                        {% endif %}
                        <button type="submit">Post Video</button>
                        {{ form_end(form) }}
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}