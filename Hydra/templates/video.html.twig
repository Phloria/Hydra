{% extends is_granted('IS_AUTHENTICATED_FULLY') ? "Header-Footer/header_connected.html.twig" : "Header-Footer/header_disconnected.html.twig" %}
{% block header %}
	<link rel="stylesheet" href="{{ asset('css/register-login/style.css')}}"/>
{% endblock %}
{% block content %}
	<!-- Latest news section -->
	<div class="latest-news-section">
		<div class="ln-title">Latest News</div>
		<div class="news-ticker">
			<div class="news-ticker-contant">
				<div class="nt-item"><span class="new">new</span>Lorem ipsum dolor sit amet, consectetur adipiscing elit. </div>
				<div class="nt-item"><span class="strategy">strategy</span>Isum dolor sit amet, consectetur adipiscing elit. </div>
				<div class="nt-item"><span class="racing">racing</span>Isum dolor sit amet, consectetur adipiscing elit. </div>
			</div>
		</div>
	</div>
	<!-- Latest news section end -->

	<section class="page-section recent-game-page spad">
		<div class="container">
			<div class="col-lg-11">
				{% if is_granted('IS_AUTHENTICATED_FULLY') %}
					<form action="{{path('edit_video_page')}}">
						<input type="hidden" name="videoid" value="{{ video.id }}">
						<button class="background-yellow position-left" type="submit">Edit</button>
					</form>
					<form action="{{path('edit_video_page')}}">
						<input type="hidden" name="videoid" value="{{ video.id }}">
						<button class="background-yellow position-right" type="submit">Delete</button>
					</form>
					<br><br><br>
				{% endif %}
				<div class="video-container space-top">
					{% if video.type == "Youtube" %}
					<iframe width="960" height="540"
							allowfullscreen="allowfullscreen"
							frameborder="0"
							src="https://www.youtube.com/embed/{{ video.urlId }}?autoplay=1">
					</iframe>
					{% elseif video.type == "Twitch" %}
					<iframe width="960" height="540"
							frameborder="0"
							allowfullscreen="allowfullscreen"
							src="https://player.twitch.tv/?video={{ video.urlId }}>">
					</iframe>
					{% endif %}
				</div>
				<div class="space-top">
					<h2>{{ video.title }}</h2>
					<p>{{ video.description }} </p>
				</div>
			</div>
		</div>
	</section>
{% endblock %}